<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--注意：自定义属性的名称必须和 自定义view的类名 一样在布局文件中才会有提示！-->
    <declare-styleable name="YPKTabLayoutView">
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectTextColor" format="color" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="tab_view_bg" format="color" />
        <attr name="select_tab_color" format="color" />
        <!--值越大，弧度越大-->
        <attr name="arcControlX" format="integer" />
        <!--圆角的大小-->
        <attr name="view_bg_corners" format="dimension" />

        <!--只有选中的才显示指示线-->
        <attr name="show_indicator_select" format="boolean" />
        <!--是否显示指示线-->
        <attr name="show_indicator" format="boolean" />
        <!--指示线的高度-->
        <attr name="tab_indicator_height" format="dimension" />
        <!--指示线的宽度-->
        <attr name="tab_indicator_width" format="dimension" />
        <!--指示线的与文字的间隔-->
        <attr name="tab_indicator_spacing" format="dimension" />
    </declare-styleable>


</resources>